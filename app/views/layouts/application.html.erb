<% content_for :head do %>
  <%= stylesheet_link_tag "application" %>
  <%= csrf_meta_tags %>
<% end %>

<% content_for :page_title, title %>

<% content_for :cookies_banner do %>
  <%= render partial: "cookies/banner" %>
<% end %>

<% content_for :header_content do %>
  <%= link_to  t(:global_proposition_header), main_app.root_path, id: "proposition-name", class: "govuk-header__link govuk-header__service-name" %>
<% end %>

<% content_for :phase_banner do %>
  <div class="govuk-phase-banner">
    <p class="govuk-phase-banner__content">
      <strong class="govuk-tag govuk-phase-banner__content__tag">
        <%= t(".beta")  %>
      </strong>
      <span class="govuk-phase-banner__text">
        <%= t(
              ".feedback",
              link: link_to(
                t(".feedback_link"),
                t(".feedback_url"),
                class: "govuk-link",
                target: "_blank"
              )
            ).html_safe
        %>
      </span>
    </p>
  </div>
<% end %>

<% content_for :footer do %>
  <p class="govuk-!-font-weight-bold"><%= t(".support_text") %></p>
  <ul class="govuk-footer__inline-list">
    <li class="govuk-footer__inline-list-item">
      <%= link_to "Privacy", "/pages/privacy", class: "govuk-footer__link" %>
    </li>
    <li class="govuk-footer__inline-list-item">
      <%= link_to "Cookies", "/pages/cookies", class: "govuk-footer__link" %>
    </li>
    <li class="govuk-footer__inline-list-item">
      <%= link_to "Accessibility", "/pages/accessibility", class: "govuk-footer__link" %>
    </li>
  </ul>
<% end %>

<%= render template: "layouts/defra_ruby_template" %>
